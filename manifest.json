{
    "name": "Baseball Player Tracker",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Know when players are at bat",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["src/dist/event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "baseball player tracker",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "permissions": [
        "notifications",
        "storage",
        "alarms",
        "http://*.mlb.com/",
        "tabs"
    ]
}
