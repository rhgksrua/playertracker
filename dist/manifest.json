{
    "name": "Baseball Player Tracker",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "Know when players are at bat",
    "background": {
        "scripts": ["src/dist/event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "baseball player tracker",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "permissions": [
        "notifications",
        "storage",
        "alarms",
        "http://*.mlb.com/",
        "tabs"
    ]
}
